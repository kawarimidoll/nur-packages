{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "lockFileMaintenance": {
    "enabled": true,
    "extends": ["schedule:daily"]
  },
  "automerge": true,
  "automergeStrategy": "rebase",
  "nix": {
    "enabled": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["nvfetcher\\.toml$"],
      "matchStrings": [
        "\\[(?<depName>[^\\]]+)\\][\\s\\S]*?fetch\\.github\\s*=\\s*\"(?<packageName>[^\"]+)\"[\\s\\S]*?src\\.manual\\s*=\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver"
    }
  ]
}
